<div id='sign'>
  <h1>Student</h1>

  <%= form_for(:session, :url => '/session/retry/0') do |f| %>
    <div class="field">
      Email: <br />
      <%= f.text_field :email, :size => 18, :maxlength => 30, :class => 'text' %>
    </div>
    <div class="field">
      Password: <br />
      <%= f.password_field :passwordi, :size => 18, :maxlength => 30, :class => 'text' %>
    </div>
    <div class="actions">
      <%= f.submit "Sign in" %>
    </div>
  <% end %>
  <br />
  <p>New user? <%= link_to "Sign up now!", signup0_path %></p>
</div>

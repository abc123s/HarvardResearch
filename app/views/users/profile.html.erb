<% if @user.usertype == 0 %>
    <h1>Your Applications</h1>
    <table>
      <tr>
        <th>Job Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.job.title %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
<% end %>

<% elsif @user.usertype == 1 %>
    <h1>Your Jobs</h1>
    <table>
      <tr>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>
<% else %>
    <%= link_to 'Job Listings', jobs_path %> |
    <%= link_to 'Professor List', users_path %> |
    <%= link_to 'Submissions List', submissions_path %> |
    <%= link_to 'Back', user_profile_path(remember_token[0]) %>
<% end %> 

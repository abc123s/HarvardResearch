<div id='left'>
  <h1> Your Profile </h1>
  <div id='leftin'>
    <p>
      <b>First Name:</b>
      <%= @user.firstname %>
    </p>
    <p>
      <b>Last Name:</b>
      <%= @user.lastname %>
    </p>
    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>
    <p>
      <b>Phone Number:</b>
      <%= @user.phone %>
    </p>

    <% if User.find(remember_token[0]).usertype != 1 %>
        <p>
          <b>Year:</b>
          <%= @user.year %>
        </p>
        <p>
          <b>Concentration:</b>
          <%= @user.concentration %>
        </p>
        <p>
          <b>Secondary:</b>
          <%= @user.secondary %>
        </p>
        <p>
          <b>GPA:</b>
          <%= @user.gpa %>
        </p>
        <p>
          <b>Resume:</b>
          <%= @user.resume %>
        </p>
    <% elsif User.find(remember_token[0]).usertype != 0 %>
        <p>
          <b>Interests:</b>
          <%= @user.interests %>
        </p>
        <p>
          <b>Title:</b>
          <%= @user.title %>
        </p>
        <p>
          <b>Location:</b>
          <%= @user.location %>
        </p>
        <p>
          <b>Department:</b>
          <%= @user.department %>
        </p>
    <% end %>
    <% if remember_token[0] == @user.id %>
      <div id='edit'>
        <%= link_to 'Edit', edit_user_path(@user) %>
      </div>
   <%end%>
  </div>
  </div>
<div id='right'>
  <% if @user.usertype == 0 %>
    <h1>Your Applications</h1>
    <div id='rightin'>
    <table>
      <tr>
        <th>Job Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.job.title %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  <% elsif @user.usertype == 1 %>
    <h1>Your Jobs</h1>
    <div id='rightin'>
    <table>
      <tr>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
<% else %>
    <%= link_to 'Job Listings', jobs_path %> |
    <%= link_to 'Professor List', users_path %> |
    <%= link_to 'Submissions List', submissions_path %> |
    <%= link_to 'Back', user_profile_path(remember_token[0]) %>
<% end %> 

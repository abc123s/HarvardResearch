<div id="line"></div>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="left">
  <div class="field">
    <%= f.hidden_field :usertype %>
  </div>
  <div class="field">
    <%= f.label :firstname, "First Name" %><br />
    <%= f.text_field :firstname, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Last Name" %><br />
    <%= f.text_field :lastname, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone Number" %><br />
    <%= f.text_field :phone, :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.select :year, User::YEARS, :prompt => "Select a year", :size => 30 %>
  </div>
  </div>
  <div id="right">
  <div class="field">
    <%= f.label :concentration %><br />
    <%= f.select :concentration, User::CONCENTRATIONS, :prompt => "Select your primary concentration", :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :secondary %><br />
    <%= f.select :secondary, User::SECONDARYS, :prompt => "Select a secondary" , :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :gpa , "GPA" %><br />
    <%= f.text_field :gpa, :size => 30 %>
  </div>
  </div>
  <div id="bottom">
  <div class="field">
    <%= f.label :resume %><br />
    <%= f.text_area :resume %>
  </div>
  <div class="field">
    <%= f.label :privacy %><br />
    <%= f.check_box :privacy %>
  </div>
  <div class="field">
    <label>Confirm Password</label><br />
    <%= f.password_field :old_password, :size => 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>

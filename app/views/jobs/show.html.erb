<div id='left'>
<h1> Job Description </h1>
<div id='leftin'>
<p>
  <b>Title:</b>
  <%= @job.title %>
</p>

<p>
  <b>Funding:</b>
  <%= @job.funding %>
</p>

<p>
  <b>Description:</b>
  <%= @job.description %>
</p>

<p>
  <b>Duration:</b>
  <%= @job.duration %>
</p>

<p>
  <b>Position:</b>
  <%= @job.position %>
</p>

<p>
  <b>Location:</b>
  <%= @job.location %>
</p>
</div>
</div>
<% if User.find(remember_token[0]).usertype == 0%>
  <div style="clear:both">
  <%= button_to 'Apply', new_submission_path + "/" + @job.id.to_s %>
  </div>
<% else %>
  <div style ='right'> 
  <h1>Applications To This Job</h1>
  <div style='rightin'>
  <table>
    <tr>
      <th>Applicant Name</th>
      <th></th>
    </tr>

  <% @job.submissions.each do |submission| %>
    <tr>
      <td><%= submission.user.firstname %> <%= submission.user.lastname %></td>
      <td><%= link_to 'Show', submission %></td>
    </tr>
  <% end %>
  </table>
  </div>
</div>
  <% if remember_token[0] == @job.user.id %>
    <div style="clear:both">
      <%= link_to 'Edit', edit_job_path(@job) %>
    </div>
  <%end%>
<% end %>

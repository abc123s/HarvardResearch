<header>
  <%if remember_token[0]%>
      <%= link_to logo, user_profile_path(remember_token[0].to_s) %>
  <%else%>
    <div class="wrapper">
      <div class="center">
        <%= link_to logo, root_path %>
      </div>
    </div>
  <% end %>
  <nav class="round">
    <ul>
    <%if remember_token[0]%>
        <li><%= link_to "Home", user_profile_path(remember_token[0].to_s) %></li>
    <%end%>  
    <% if signed_in? %>
        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
    <% end %>
    </ul>
  </nav>
</header>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :usertype %>
  </div>
  <div class="field">
    <%= f.label :firstname, "First Name" %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname, "Last Name" %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone Number" %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.select :year, User::YEARS, :prompt => "Select a year" %>
  </div>
  <div class="field">
    <%= f.label :concentration %><br />
    <%= f.select :concentration, User::CONCENTRATIONS, :prompt => "Select your primary concentration" %>
  </div>
  <div class="field">
    <%= f.label :secondary %><br />
    <%= f.select :secondary, User::SECONDARYS, :prompt => "Select a secondary" %>
  </div>
  <div class="field">
    <%= f.label :gpa , "GPA" %><br />
    <%= f.text_field :gpa %>
  </div>
  <div class="field">
    <%= f.label :resume %><br />
    <%= f.text_area :resume %>
  </div>
  <div class="field">
    <%= f.label :privacy %><br />
    <%= f.check_box :privacy %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
